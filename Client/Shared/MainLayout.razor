    <MudLayout>
        <MudAppBar Elevation="1" Color="Color.Tertiary">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudText Typo="Typo.h5" Class="ml-3">Go Recruit</MudText>
            @*<MudButton></MudButton>
        <MudButton OnClick="@((e) => DarkMode())">Dark-Light</MudButton>*@
            <MudAppBarSpacer />
            <MudMenu Label="Open Menu" Icon="@Icons.Material.Filled.Login">
                <MudMenuItem Link="/account/login">Login</MudMenuItem>
                <MudMenuItem Link="/account/register">Register</MudMenuItem>
                <MudMenuItem Link="/" OnClick="Logout">Logout</MudMenuItem>
            </MudMenu>
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
        </MudAppBar>
        <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
            <NavMenu></NavMenu>
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudLayout>




