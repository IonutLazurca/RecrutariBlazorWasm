@inherits LayoutComponentBase

    <MudThemeProvider Theme="currentTheme" />
    <MudDialogProvider />
    <MudSnackbarProvider />
    @*<head>
        <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
